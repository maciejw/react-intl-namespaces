{
  "compilerOptions": {
    "target": "es2015",
    "module": "amd",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
    "declaration": true,
    "stripInternal": true,
    "outFile": "./dist/typings/out.js",
    "jsx": "react",
    "moduleResolution": "node",
    "diagnostics": false,
    "traceResolution": false,
    "types": ["react-dom", "node"],
    "pretty": true,
    "experimentalDecorators": true,
    "listEmittedFiles": true
  },

  "include": ["./packages/**/*.ts", "./packages/**/*.d.ts"],
  "exclude": ["./packages/**/*.test.ts*"]
}
